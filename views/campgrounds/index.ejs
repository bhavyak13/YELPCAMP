<h1 class="mb-3 mt-3">Campgrounds!</h1>
<% for(let i of obj){ %>
<div class="card mb-3" >
    <div class="row">
        <div class="col-md-4">
            <img src="<%= i.images[0].url %>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= i.title %></h5>
                <p class="card-text"><%= i.description %> </p>
                <p class="card-text"><small class="text-muted"><%= i.location %></small></p>
                <a class="btn btn-primary" href="/campgrounds/<%= i._id %>">View <%= i.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>

