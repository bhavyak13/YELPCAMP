<%- layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-4 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <!-- <h1>Login</h1> -->
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <div class="h5 card-title mb-3">Login</div>
                    <form action="/users/login" method="post" novalidate class="validation-form">
                        <div class="mb-3">
                            <label class="form-label" for="id1">Username:</label>
                            <input class="form-control" type="text" name="username" id="id1" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="id3">Password:</label>
                            <input class="form-control" type="password" name="password" id="id3" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" type="submit">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>